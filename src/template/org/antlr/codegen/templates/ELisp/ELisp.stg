/** How to execute an action */
execAction(action) ::= <<
<if(backtracking)>
<if(actions.(actionScope).synpredgate)>
(when (<actions.(actionScope).synpredgate>)
  <action>)
<else>
(when (= backtracking 0)
  <action>)
<endif>
<else>
<action>
<endif>
>>

